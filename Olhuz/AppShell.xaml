<?xml version="1.0" encoding="UTF-8" ?>

<!-- Este arquivo define a estrutura de navegação principal do app -->

<Shell
    x:Class="Olhuz.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Olhuz.Views"
    xmlns:components="clr-namespace:Olhuz.Components"
    Title="Aplicativo Olhuz"
    
    FlyoutBehavior="Locked"
    Shell.TabBarIsVisible="False"
    Shell.NavBarIsVisible="False">


    <!--Troca o menu padrão do Shell por um menu personalizado. Permite definir o *conteúdo* que vai ficar na lateral-->
    <Shell.FlyoutContent>
        <!--Está sendo usado o controle SideMenuView que está na pasta Views-->
        <components:SideMenuView x:Name="CustomSideMenu" />
    </Shell.FlyoutContent>

    <ShellContent
        Title="Página Inicial"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage"
        Shell.FlyoutBehavior="Disabled"/>

    <ShellContent
        Title="Acessar"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage"
        Shell.FlyoutBehavior="Disabled" />

    <ShellContent
        Title="Cadastrar"
        ContentTemplate="{DataTemplate views:RegisterPage}"
        Route="RegisterPage"
        Shell.FlyoutBehavior="Disabled" />

    <!-- FlyoutItem: Representa um item no menu -->

    <!--ShellContent: Página navegável
     ContentTemplate: define qual página será carregada
     Route: define o nome da rota usada para navegação por código-->

    <!-- MENU LATERAL FIXO COM ITENS DE NAVEGAÇÃO -->
    <FlyoutItem Title="Página Principal" Route="HomePage">
        <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Descrever Imagens" Route="ReadImagePage">
        <ShellContent ContentTemplate="{DataTemplate views:ReadImagePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Leituras Recentes" Route="ReadingHistoryPage">
        <ShellContent ContentTemplate="{DataTemplate views:ReadingHistoryPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Configurações" Route="SettingsPage">
        <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Minha Conta" Route="MyAccountPage">
        <ShellContent ContentTemplate="{DataTemplate views:MyAccountPage}" />
    </FlyoutItem>
</Shell>